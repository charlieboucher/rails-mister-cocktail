<div class="container">
  <h3> <%= @cocktail.name %> </h3>
  <% @cocktail.doses.each do |dose| %>
    <h4><%= dose.description %></h4>
  <% end %>


<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
<%= link_to "All cocktails", cocktails_path, {:class => "btn-success btn"} %>

</div>
