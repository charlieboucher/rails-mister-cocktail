<div class="container">
  <h2>Cocktails manager</h2>
  <% @cocktails.each do |cocktail| %>
    <h3> <%= link_to "#{cocktail.name}", cocktail %> </h3>
    <ul>
      <% cocktail.doses.each do|dose| %>
      <li> <%= dose.description %> </li>
      <% end %>
    </ul>
  <% end %>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary"%>
</div>
